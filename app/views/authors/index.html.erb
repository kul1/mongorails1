<h1>Listing authors</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= link_to 'Show', post_author_path(@post, author) %></td>
        <td><%= link_to 'Edit', edit_post_author_path(@post, author) %></td>
        <td><%= link_to 'Destroy', [@post, author], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_post_author_path(@post) %>
